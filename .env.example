# Environment Variables Template
# Copy this file to .env and fill in your secure values
# DO NOT commit .env to version control

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 32
# MUST be at least 32 characters (256 bits)
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_32

# ============================================
# MySQL Database Credentials
# ============================================
# Generate with: openssl rand -base64 24
MYSQL_ROOT_PASSWORD=CHANGE_ME_secure_root_password
MYSQL_USER=app_user
MYSQL_PASSWORD=CHANGE_ME_secure_mysql_password

# ============================================
# MongoDB Credentials
# ============================================
MONGO_USERNAME=mongo_admin
MONGO_PASSWORD=CHANGE_ME_secure_mongo_password

# ============================================
# PostgreSQL Credentials (Audit Service)
# ============================================
POSTGRES_USER=audit_user
POSTGRES_PASSWORD=CHANGE_ME_secure_postgres_password

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development
FRONTEND_URL=http://localhost:4200

# ============================================
# Production Configuration (uncomment for prod)
# ============================================
# ENVIRONMENT=production
# FRONTEND_URL=https://your-production-domain.com